{
  "manifest_version": 3,
  "name": "Century Assignment Creator",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting", "storage", "clipboardWrite"],
  "host_permissions": [
    "https://app.century.tech/*",
    "https://tutor.tnx.dev/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://app.century.tech/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}